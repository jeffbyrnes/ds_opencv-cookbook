map $http_user_agent $ignore_ua {
  default                 0;
  "~Pingdom.*"            1;
  "ELB-HealthChecker/1.0" 1;
}

server {
  listen 80 default_server;
  listen [::]:80 default_server;
  server_name _;
  root <%= node['ds_radar']['path'] %>/public;

  passenger_enabled on;
  passenger_user app;
  passenger_app_type node;
  passenger_startup_file server.js;

  <% @env_vars.each do |name, value| %>
  passenger_env_var <%= name %> <%= value %>;
  <% end %>

  # Set the IP address to what the ELB provides
  # Ensures that the IP we log is the actual visitor, not the ELBâ€™s
  real_ip_header X-Forwarded-For;
  set_real_ip_from 0.0.0.0/0;

  location /v1/status.txt {
    if ($ignore_ua) {
      access_log off;
      return 200;
    }
  }
}

